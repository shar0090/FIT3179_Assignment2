{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://github.com/shar0090/FIT3179_Assignment2/blob/main/ne_110m%20(1).json?short_path=f178daf",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/shar0090/FIT3179_Assignment2/main/Olympic_Swimming_Results_1912to2020%202.csv"
            },
            "transform": [
                {
                    "calculate": "datum.rank === 1 ? 1 : datum.rank === 2 ? 0.8 : datum.rank === 3 ? 0.6 : 0", 
                    "as": "medal_size"
                }
            ],
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "size": {
                    "field": "medal_size",
                    "type": "quantitative",
                    "title": "Medal Size",
                    "scale": {
                        "domain": [0, 1],  
                        "range": [10, 100]  
                    }
                },
                "color": {
                    "field": "depth",
                    "type": "quantitative",
                    "title": "Depth in km",
                    "scale": {
                        "scheme": "reds"
                    }
                }
            }
        }
    ]
}